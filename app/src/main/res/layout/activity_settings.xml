<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
<RadioGroup
    android:layout_centerInParent="true"
    android:paddingVertical="@android:dimen/app_icon_size"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rr">

    <TextView
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Type"
        android:paddingBottom="10dp"/>

    <RadioButton

        android:text="Imperial System"
        android:id="@+id/rbImperial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioButton
        android:layout_below="@id/rbImperial"
        android:text="Metric System"
        android:id="@+id/rbMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RadioGroup>

    <Button
        android:layout_centerHorizontal="true"
     android:layout_below="@id/rr"
        android:id="@+id/sett_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="@android:color/white"
        android:background="@color/myBlue"/>
</RelativeLayout>